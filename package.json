{
  "name": "seriously",
  "version": "0.1.0",
  "description": "A real-time, node-based video effects compositor for the web built with HTML5, Javascript and WebGL",
  "main": "seriously.js",
  "directories": {
    "example": "examples",
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "test": "test",
    "build": "rollup -c",
    "buildtest": "rollup -c rollup.test.config.js",
    "buildexamples": "rollup -c rollup.examples.config.js",
    "serve": "http-server",
    "examples": "http-server ./examples/ | opn localhost:8080"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brianchirls/Seriously.js.git"
  },
  "keywords": [
    "webgl",
    "canvas",
    "compositing",
    "javascript",
    "html5",
    "video",
    "real-time",
    "node-based"
  ],
  "author": "Brian Chirls",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/brianchirls/Seriously.js/issues"
  },
  "homepage": "https://github.com/brianchirls/Seriously.js#readme",
  "dependencies": {},
  "devDependencies": {
    "http-server": "^0.10.0",
    "opn-cli": "^3.1.0",
    "rollup": "^0.49.2",
    "rollup-plugin-filesize": "^1.4.2",
    "rollup-plugin-progress": "^0.4.0",
    "rollup-plugin-uglify": "^2.0.1",
    "uglify-es": "^3.1.0"
  }
}
